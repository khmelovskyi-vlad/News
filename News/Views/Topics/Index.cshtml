<div class="row flex-column">

    <div class="column">
        <div class="row m-0">
            <div class="dropdown">
                <button class="btn btn-warning dropdown-toggle"
                        type="button" id="dropdownButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sort by
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownButton">
                    <a class="dropdown-item" asp-controller="Topics" asp-action="GetArticles"
                       asp-route-id="@ViewBag.SubTopicId"
                       asp-route-fieldName="DateOfCreation"
                       asp-route-pageNumber="ViewBag.PageNumber">@Html.DisplayNameFor(model => model.SubTopics.First().Articles.First().DateOfCreation)</a>
                    <a class="dropdown-item" asp-controller="Topics" asp-action="GetArticles"
                       asp-route-id="@ViewBag.SubTopicId"
                       asp-route-fieldName="DateOfPublication"
                       asp-route-pageNumber="ViewBag.PageNumber">@Html.DisplayNameFor(model => model.SubTopics.First().Articles.First().DateOfPublication)</a>
                    <a class="dropdown-item" asp-controller="Topics" asp-action="GetArticles"
                       asp-route-id="@ViewBag.SubTopicId"
                       asp-route-fieldName="Title"
                       asp-route-pageNumber="ViewBag.PageNumber">@Html.DisplayNameFor(model => model.SubTopics.First().Articles.First().Title)</a>
                    <a class="dropdown-item" asp-controller="Topics" asp-action="GetArticles"
                       asp-route-id="@ViewBag.SubTopicId"
                       asp-route-fieldName="SubTopic.Value"
                       asp-route-pageNumber="ViewBag.PageNumber">@Html.DisplayNameFor(model => model.SubTopics.First().Value)</a>
                    <a class="dropdown-item" asp-controller="Topics" asp-action="GetArticles"
                       asp-route-id="@ViewBag.SubTopicId"
                       asp-route-fieldName="SubTopic.Topic.Value"
                       asp-route-pageNumber="ViewBag.PageNumber">@Html.DisplayNameFor(model => model.Value)</a>
                </div>
            </div>
        </div>
    </div>
    <div class="list-group">
        @foreach (var article in (IEnumerable<Article>)ViewData["Articles"])
        {
            <a class="list-group-item" href="#">@Html.DisplayFor(model => article.Title)</a>
        }
    </div>

    <div class="column">
        @if (ViewBag.PageCount > 1)
        {
            <div class="row justify-content-between m-2">
                <div class="column">
                    <a href="#">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-left-square arrow-element" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z" />
                        </svg>
                    </a>

                </div>
                <div class="column">
                    @for (int j = 1; j < ViewBag.PageCount + 1; j++)
                    {
                        if (j >= 5)
                        {
                            <a href="#">...</a>
                            <a asp-controller="Topics" asp-action="GetArticles"
                               asp-route-id="@ViewBag.TopicId"
                               asp-route-subtopicId="@ViewBag.SubTopicId"
                               asp-route-fieldName="@ViewBag.FieldName"
                               asp-route-pageNumber="@j" class="mx-1">@ViewBag.PageCount</a>
                            break;
                        }
                        <a asp-controller="Topics" asp-action="GetArticles"
                           asp-route-id="@ViewBag.TopicId"
                           asp-route-subtopicId="@ViewBag.SubTopicId"
                           asp-route-fieldName="@ViewBag.FieldName"
                           asp-route-pageNumber="@j" class="mx-1">@j</a>
                    }
                </div>
                <div class="column">
                    <a href="#">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-right-square arrow-element" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            <path fill-rule="evenodd" d="M4 8a.5.5 0 0 0 .5.5h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5A.5.5 0 0 0 4 8z" />
                        </svg>
                    </a>
                </div>

            </div>
        }
    </div>
</div>



