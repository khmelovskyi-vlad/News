@model News.Models.ArticleCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>

<h4 class="text-center">Article</h4>
<hr />
<div class="row w-100 p-5">
    <div class="col-md-4">
        <form asp-action="MyCreate" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Article.Title" class="control-label"></label>
                <input asp-for="Article.Title" class="form-control" required />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Article.IsPublish" /> @Html.DisplayNameFor(model => model.Article.IsPublish)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Article.Content" class="control-label"></label>
                <input asp-for="Article.Content" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Article.AdminId" class="control-label"></label>
                <select asp-for="Article.AdminId" class="form-control" asp-items="Model.Admins" required></select>
            </div>
            <div class="form-group">
                <label asp-for="Article.SubTopicId" class="control-label"></label>
                <select asp-for="Article.SubTopicId" class="form-control" asp-items="Model.SubTopics" required></select>
            </div>
            <div class="form-group">
                <label asp-for="ArticleAuthors" class="control-label"></label>
                <select asp-for="ArticleAuthors" class="form-control" asp-items="Model.Authors"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArticleImage" class="control-label"></label>
                <input type="file" asp-for="ArticleImage" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
